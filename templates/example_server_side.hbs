{{!-- 
  Example template demonstrating server-side GraphQL integration with Handlebars
  NOTE: This is for demonstration purposes only and would require Zendesk to support custom helpers
--}}

<h1 class="visibility-hidden">{{ help_center.name }}</h1>
<div class="div">
  <!-- Navigation Menu Section with Server-Side GraphQL -->
  <div class="bg-white py-16">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-semibold tracking-tight text-gray-900 sm:text-4xl">Navigation Menu</h2>
        <p class="mt-2 text-lg/8 text-gray-600">Server-side GraphQL Example</p>
      </div>
      
      <div class="mt-16 grid grid-cols-1 gap-8 lg:grid-cols-2 xl:grid-cols-4">
        {{#graphql_query 'navigationMenu' id='clezyiora1akc0an0g68whmx0'}}
          <!-- Beauty Menu Section -->
          <div class="rounded-xl border border-gray-200 bg-white p-6 shadow-sm">
            <h3 class="text-xl font-semibold text-gray-900">Beauty</h3>
            <ul class="mt-4 space-y-2">
              {{#each data.navigationMenu.beautyItems}}
                <li class="group">
                  <a href="{{link}}" class="block p-3 rounded-md hover:bg-gray-50 transition-colors duration-200">
                    <div class="font-medium text-gray-900 group-hover:text-blue-600">{{name}}</div>
                    {{#if description}}
                      <div class="mt-1 text-sm text-gray-500">{{description}}</div>
                    {{/if}}
                  </a>
                </li>
              {{/each}}
            </ul>
          </div>
          
          <!-- Fitness Menu Section -->
          <div class="rounded-xl border border-gray-200 bg-white p-6 shadow-sm">
            <h3 class="text-xl font-semibold text-gray-900">Fitness</h3>
            <ul class="mt-4 space-y-2">
              {{#each data.navigationMenu.fitnessItems}}
                <li class="group">
                  <a href="{{link}}" class="block p-3 rounded-md hover:bg-gray-50 transition-colors duration-200">
                    <div class="font-medium text-gray-900 group-hover:text-blue-600">{{name}}</div>
                    {{#if description}}
                      <div class="mt-1 text-sm text-gray-500">{{description}}</div>
                    {{/if}}
                  </a>
                </li>
              {{/each}}
            </ul>
          </div>
          
          <!-- Wellness Menu Section -->
          <div class="rounded-xl border border-gray-200 bg-white p-6 shadow-sm">
            <h3 class="text-xl font-semibold text-gray-900">Wellness</h3>
            <ul class="mt-4 space-y-2">
              {{#each data.navigationMenu.wellnessItems}}
                <li class="group">
                  <a href="{{link}}" class="block p-3 rounded-md hover:bg-gray-50 transition-colors duration-200">
                    <div class="font-medium text-gray-900 group-hover:text-blue-600">{{name}}</div>
                    {{#if description}}
                      <div class="mt-1 text-sm text-gray-500">{{description}}</div>
                    {{/if}}
                  </a>
                </li>
              {{/each}}
            </ul>
          </div>
          
          <!-- Feature Menu Section -->
          <div class="rounded-xl border border-gray-200 bg-white p-6 shadow-sm">
            <h3 class="text-xl font-semibold text-gray-900">Features</h3>
            <ul class="mt-4 space-y-2">
              {{#each data.navigationMenu.featureItems}}
                <li class="group">
                  <a href="{{link}}" class="block p-3 rounded-md hover:bg-gray-50 transition-colors duration-200">
                    <div class="font-medium text-gray-900 group-hover:text-blue-600">
                      {{name}}
                      {{#if flagAsNew}}
                        <span class="ml-2 inline-flex items-center rounded-md bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-700/10">New</span>
                      {{/if}}
                      {{#if flagAsBeta}}
                        <span class="ml-2 inline-flex items-center rounded-md bg-yellow-50 px-2 py-1 text-xs font-medium text-yellow-800 ring-1 ring-inset ring-yellow-600/20">Beta</span>
                      {{/if}}
                    </div>
                    {{#if description}}
                      <div class="mt-1 text-sm text-gray-500">{{description}}</div>
                    {{/if}}
                  </a>
                </li>
              {{/each}}
            </ul>
          </div>
        {{/graphql_query}}
      </div>
    </div>
  </div>
</div> 